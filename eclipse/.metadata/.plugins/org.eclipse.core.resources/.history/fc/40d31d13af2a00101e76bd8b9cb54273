		deleteCurrent = (Button) findViewById(R.id.DialogCrosswordsReset);
		deleteCurrent.setOnClickListener(this);
		clearErrors = (Button) findViewById(R.id.DialogCrosswordsReset);
		clearErrors.setOnClickListener(this);
		cancel = (Button) findViewById(R.id.DialogCrosswordsReset);
		cancel.setOnClickListener(this);
	}

	@Override
	public void onClick(View view) {
		if (restart.equals(view)) {
		} else if (deleteCurrent.equals(view)) {

		} else if (clearErrors.equals(view)) {
		} else if (cancel.equals(view)) {
		}
	}

}
