package codegears.DEPuzzles.data;

public class Clue {
	private String id;
	private String text;
	private String length;

	public void setData(String str) {
		// A4:Drinks lacking body? (7)
		String[] temp = str.split(":");
		id = temp[0];
		temp = temp[1].split("(");
		text = temp[0];
		length = temp[1];
	}
	
	public String getId(){
		return id;
	}
	
	public String getText(){
		return text;
	}
	
	public String length(){
		return length;
	}
}
