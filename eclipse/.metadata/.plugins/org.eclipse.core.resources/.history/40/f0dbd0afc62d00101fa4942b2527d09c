		b_c.setKey("C");
		b_v = (KeyPadButton) findViewById(R.id.KeyPadV);
		b_v.setOnClickListener(this);
		b_v.setKey("V");
		b_b = (KeyPadButton) findViewById(R.id.KeyPadB);
		b_b.setOnClickListener(this);
		b_b.setKey("B");
		b_n = (KeyPadButton) findViewById(R.id.KeyPadN);
		b_n.setOnClickListener(this);
		b_n.setKey("N");
		b_m = (KeyPadButton) findViewById(R.id.KeyPadM);
		b_m.setOnClickListener(this);
		b_m.setKey("M");
		b_back = (Button) findViewById(R.id.KeyPadBack);
		b_back.setOnClickListener(this);
	}

	public void setKeyPadListener(KeyPadListener listener) {
		this.listener = listener;
	}
	
	public int getNumber(String key){
		if (key.equals("Q")) {
			return b_q.getNumber();
		} else if (key.equals("W")) {
			return b_w.getNumber();
		} else if (key.equals("E")) {
			return b_e.getNumber();
		} else if (key.equals("R")) {
			return b_q.getNumber();
		} else if (key.equals("T")) {
			return b_q.getNumber();
		} else if (key.equals("Y")) {
			return b_q.getNumber();
		} else if (key.equals("U")) {
			return b_q.getNumber();
		} else if (key.equals("I")) {
			return b_q.getNumber();
		} else if (key.equals("O")) {
			return b_q.getNumber();
		} else if (key.equals("P")) {
			return b_q.getNumber();
		} else if (key.equals("A")) {
			return b_q.getNumber();
		} else if (key.equals("S")) {
			return b_q.getNumber();
		} else if (key.equals("D")) {
			return b_q.getNumber();
		} else if (key.equals("F")) {
			return b_q.getNumber();
		} else if (key.equals("G")) {
			return b_q.getNumber();
		} else if (key.equals("H")) {
			return b_q.getNumber();
		} else if (key.equals("J")) {
			return b_q.getNumber();
		} else if (key.equals("K")) {
			return b_q.getNumber();
		} else if (key.equals("L")) {
			return b_q.getNumber();
		} else if (key.equals("Z")) {
			return b_q.getNumber();
		} else if (key.equals("X")) {
			return b_q.getNumber();
		} else if (key.equals("C")) {
			return b_q.getNumber();
		} else if (key.equals("V")) {
			return b_q.getNumber();
		} else if (key.equals("B")) {
			return b_q.getNumber();
		} else if (key.equals("N")) {
			return b_q.getNumber();
		} else if (key.equals("M")) {
			return b_q.getNumber();
		}
		return 0;
	}
	
	private KeyPadButton findButtonByKey(String key){
		if (key.equals("Q")) {
			return b_q;
		} else if (key.equals("W")) {
			b_w.setNumber(number);
		} else if (key.equals("E")) {
			b_e.setNumber(number);
		} else if (key.equals("R")) {
			b_r.setNumber(number);
		} else if (key.equals("T")) {
			b_t.setNumber(number);
		} else if (key.equals("Y")) {
			b_y.setNumber(number);
		} else if (key.equals("U")) {
			b_u.setNumber(number);
		} else if (key.equals("I")) {
			b_i.setNumber(number);
		} else if (key.equals("O")) {
			b_o.setNumber(number);
		} else if (key.equals("P")) {
			b_p.setNumber(number);
		} else if (key.equals("A")) {
			b_a.setNumber(number);
		} else if (key.equals("S")) {
			b_s.setNumber(number);
		} else if (key.equals("D")) {
			b_d.setNumber(number);
		} else if (key.equals("F")) {
			b_f.setNumber(number);
		} else if (key.equals("G")) {
			b_g.setNumber(number);
		} else if (key.equals("H")) {
			b_h.setNumber(number);
		} else if (key.equals("J")) {
			b_j.setNumber(number);
		} else if (key.equals("K")) {
			b_k.setNumber(number);
		} else if (key.equals("L")) {
			b_l.setNumber(number);
		} else if (key.equals("Z")) {
			b_z.setNumber(number);
		} else if (key.equals("X")) {
			b_x.setNumber(number);
		} else if (key.equals("C")) {
			b_c.setNumber(number);
		} else if (key.equals("V")) {
			b_q.setNumber(number);
		} else if (key.equals("B")) {
			b_b.setNumber(number);
		} else if (key.equals("N")) {
			b_n.setNumber(number);
		} else if (key.equals("M")) {
			b_m.setNumber(number);
		}
	}

	public void setNumber(String key, int number) {
		if (key.equals("Q")) {
			b_q.setNumber(number);
		} else if (key.equals("W")) {
			b_w.setNumber(number);
		} else if (key.equals("E")) {
			b_e.setNumber(number);
		} else if (key.equals("R")) {
			b_r.setNumber(number);
		} else if (key.equals("T")) {
			b_t.setNumber(number);
		} else if (key.equals("Y")) {
			b_y.setNumber(number);
		} else if (key.equals("U")) {
			b_u.setNumber(number);
		} else if (key.equals("I")) {
			b_i.setNumber(number);
		} else if (key.equals("O")) {
			b_o.setNumber(number);
		} else if (key.equals("P")) {
			b_p.setNumber(number);
		} else if (key.equals("A")) {
			b_a.setNumber(number);
		} else if (key.equals("S")) {
			b_s.setNumber(number);
		} else if (key.equals("D")) {
			b_d.setNumber(number);
		} else if (key.equals("F")) {
			b_f.setNumber(number);
		} else if (key.equals("G")) {
			b_g.setNumber(number);
		} else if (key.equals("H")) {
			b_h.setNumber(number);
		} else if (key.equals("J")) {
			b_j.setNumber(number);
		} else if (key.equals("K")) {
			b_k.setNumber(number);
		} else if (key.equals("L")) {
			b_l.setNumber(number);
		} else if (key.equals("Z")) {
			b_z.setNumber(number);
		} else if (key.equals("X")) {
			b_x.setNumber(number);
		} else if (key.equals("C")) {
			b_c.setNumber(number);
		} else if (key.equals("V")) {
			b_q.setNumber(number);
		} else if (key.equals("B")) {
			b_b.setNumber(number);
		} else if (key.equals("N")) {
			b_n.setNumber(number);
		} else if (key.equals("M")) {
			b_m.setNumber(number);
		}
	}

	@Override
	public void onClick(View v) {
		String key = "";
		if (v.equals(b_q)) {
			key = "Q";
		} else if (v.equals(b_w)) {
			key = "W";
		} else if (v.equals(b_e)) {
			key = "E";
		} else if (v.equals(b_r)) {
			key = "R";
		} else if (v.equals(b_t)) {
			key = "T";
		} else if (v.equals(b_y)) {
			key = "Y";
		} else if (v.equals(b_u)) {
			key = "U";
		} else if (v.equals(b_i)) {
			key = "I";
		} else if (v.equals(b_o)) {
			key = "O";
		} else if (v.equals(b_p)) {
			key = "P";
		} else if (v.equals(b_a)) {
			key = "A";
		} else if (v.equals(b_s)) {
			key = "S";
		} else if (v.equals(b_d)) {
			key = "D";
		} else if (v.equals(b_f)) {
			key = "F";
		} else if (v.equals(b_g)) {
			key = "G";
		} else if (v.equals(b_h)) {
			key = "H";
		} else if (v.equals(b_j)) {
			key = "J";
		} else if (v.equals(b_k)) {
			key = "K";
		} else if (v.equals(b_l)) {
			key = "L";
		} else if (v.equals(b_mode)) {
			if (mode == CrosswordsTile.TEXT_PEN) {
				mode = CrosswordsTile.TEXT_PENCIL;
				b_mode.setText("-");
			} else if (mode == CrosswordsTile.TEXT_PENCIL) {
				mode = CrosswordsTile.TEXT_MULTI;
				b_mode.setText("*");
			} else if (mode == CrosswordsTile.TEXT_MULTI) {
				mode = CrosswordsTile.TEXT_PEN;
				b_mode.setText("+");
			}
			return;
		} else if (v.equals(b_z)) {
			key = "Z";
		} else if (v.equals(b_x)) {
			key = "X";
		} else if (v.equals(b_c)) {
			key = "C";
		} else if (v.equals(b_v)) {
			key = "V";
		} else if (v.equals(b_b)) {
			key = "B";
		} else if (v.equals(b_n)) {
			key = "N";
		} else if (v.equals(b_m)) {
			key = "M";
		} else if (v.equals(b_back)) {
			key = KEY_BACK;
		}
		listener.onKeyPad(mode, key);
	}

}
